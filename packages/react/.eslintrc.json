{

  "parser": "babel-eslint",
  
  "rules": {
    "strict": 0,
    "react/no-danger": 0
  },

  "env": {
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 7,
    "experimentalObjectRestSpread": true,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "react"
  ],

  "globals": {
  },

  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.1.0"
    }
  },

  "extends": [ "eslint:recommended", "plugin:react/recommended" ]

}
